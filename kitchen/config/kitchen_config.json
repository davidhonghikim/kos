{
  "metadata": {
    "title": "kOS Kitchen Configuration",
    "version": "1.1.0",
    "created_by": "kOS Kitchen System",
    "creation_timestamp": "2025-07-08T02:00:00Z",
    "last_updated": "2025-07-08T10:35:00Z",
    "status": "ACTIVE",
    "purpose": "Main configuration for the kOS kitchen system"
  },
  "kitchen": {
    "name": "kOS Kitchen",
    "version": "1.1.0",
    "description": "Modular execution framework for AI agents and automation workflows",
    "max_concurrent_recipes": 5,
    "context_window_size": 28000,
    "timeout_seconds": 300,
    "auto_discovery": true,
    "validation_enabled": true
  },
  "pantry": {
    "path": "pantry",
    "auto_discover": true,
    "validate_ingredients": true,
    "cache_enabled": true,
    "max_cache_size_mb": 100,
    "ingredient_categories": [
      "tools",
      "skills", 
      "modules",
      "tasks",
      "configs",
      "schemas"
    ]
  },
  "recipes": {
    "path": "recipes",
    "auto_discover": true,
    "validate_recipes": true,
    "max_recipe_size_kb": 300,
    "allowed_extensions": [".json"],
    "recipe_categories": [
      "infrastructure",
      "ai-services",
      "intelligence",
      "agent-integration",
      "interface",
      "development",
      "content-processing",
      "content-creation",
      "research",
      "knowledge-synthesis",
      "collaboration",
      "quality-assurance",
      "advanced-interfaces",
      "deployment",
      "monitoring",
      "backup-recovery",
      "scaling-optimization",
      "deployment-automation",
      "context7-integration"
    ]
  },
  "logging": {
    "level": "INFO",
    "file": "logs/kitchen_engine.log",
    "max_size_mb": 10,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "console_output": true
  },
  "security": {
    "vault_enabled": true,
    "vault_path": "config/vault",
    "encryption_enabled": false,
    "access_control": true,
    "audit_logging": true
  },
  "performance": {
    "max_memory_mb": 1024,
    "max_cpu_percent": 80,
    "cache_ttl_seconds": 3600,
    "operation_timeout_seconds": 60,
    "context_pruning_enabled": true
  },
  "integration": {
    "kOS_kernel": {
      "enabled": true,
      "connection_timeout": 30,
      "retry_attempts": 3
    },
    "griot_node": {
      "enabled": false,
      "endpoint": "http://localhost:3000",
      "api_key_required": true
    },
    "browser_extension": {
      "enabled": false,
      "websocket_port": 8080,
      "cors_enabled": true
    },
    "context7": {
      "enabled": true,
      "auto_start": true,
      "config_path": "kitchen/config/context7_integration.json",
      "package_manager": "auto",
      "cache_enabled": true,
      "rate_limiting": true,
      "requests_per_minute": 60,
      "burst_limit": 10,
      "cache_duration": "24_hours",
      "cache_location": "kitchen/cache/context7",
      "health_check_interval": 300,
      "timeout_seconds": 30,
      "retry_attempts": 3,
      "troubleshooting": {
        "module_not_found": {
          "solution": "use_bunx",
          "command": "bunx -y @upstash/context7-mcp"
        },
        "esm_resolution": {
          "solution": "use_experimental_vm_modules",
          "command": "npx -y --node-options=--experimental-vm-modules @upstash/context7-mcp@1.0.6"
        },
        "tls_certificate": {
          "solution": "use_experimental_fetch",
          "command": "npx -y --node-options=--experimental-fetch @upstash/context7-mcp"
        }
      }
    }
  },
  "development": {
    "debug_mode": false,
    "hot_reload": false,
    "test_mode": false,
    "profiling_enabled": false,
    "mock_operations": false
  }
} 