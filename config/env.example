# kOS Environment Configuration Template
# Copy this file to .env and configure with your values

# Application Settings
NODE_ENV=development
KOS_VERSION=1.0.0
KOS_LOG_LEVEL=INFO
KOS_DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=3000
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kos_main
POSTGRES_USER=kos_user
POSTGRES_PASSWORD=kos_password
POSTGRES_URL=postgresql://kos_user:kos_password@localhost:5432/kos_main

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Neo4j
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_URL=bolt://localhost:7687

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400
BCRYPT_ROUNDS=12

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./data/storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,txt,md,json

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090
LOG_FORMAT=json
LOG_LEVEL=INFO

# Development Settings
DEBUG=true
RELOAD=true
TESTING=false
MOCK_EXTERNAL_SERVICES=false

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_PREFIX=kos
DOCKER_TAG=latest

# External Services
ELASTICSEARCH_URL=http://localhost:9200
WEAVIATE_URL=http://localhost:8080
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@kos-framework.com

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# Plugin System
PLUGIN_DIRECTORY=./plugins
PLUGIN_REGISTRY_URL=https://registry.kos-framework.com
PLUGIN_SANDBOX=true

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 