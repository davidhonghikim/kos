#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check file sizes
echo "ğŸ“ Checking file sizes..."
find src/ -name "*.ts" -o -name "*.tsx" -o -name "*.py" | while read file; do
  lines=$(wc -l < "$file")
  if [ "$lines" -gt 300 ]; then
    echo "âŒ $file has $lines lines (max 300)"
    exit 1
  fi
done

# Check for hardcoded values
echo "ğŸ”’ Checking for hardcoded values..."
if grep -r "localhost\|127.0.0.1\|8080\|3000\|5432" src/ --exclude-dir=node_modules --exclude-dir=.git; then
  echo "âŒ Found potential hardcoded values"
  exit 1
fi

# Run linting
echo "ğŸ§¹ Running linting..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed"
  exit 1
fi

# Run formatting check
echo "ğŸ¨ Checking formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Formatting check failed"
  exit 1
fi

# Run type checking
echo "ğŸ” Running type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed"
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed"
  exit 1
fi

echo "âœ… All pre-commit checks passed!" 