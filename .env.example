# =============================================================================
# kOS Knowledge Library Framework - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# All variables use KOS_ prefix for centralized management

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
KOS_PROJECT_NAME=kOS Knowledge Library Framework
KOS_ENVIRONMENT=development
KOS_DEBUG=true
KOS_LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
KOS_API_HOST=localhost
KOS_API_PORT=8000
KOS_API_CONTAINER_PORT=8000
KOS_FRONTEND_HOST=localhost
KOS_FRONTEND_PORT=3000
KOS_FRONTEND_CONTAINER_PORT=3000
KOS_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# DOCKER IMAGE TAGS (Centralized Management)
# =============================================================================
# PostgreSQL Database
KOS_POSTGRES_IMAGE=postgres:15-alpine
KOS_POSTGRES_VERSION=15-alpine

# Redis Cache
KOS_REDIS_IMAGE=redis:7-alpine
KOS_REDIS_VERSION=7-alpine

# Neo4j Graph Database
KOS_NEO4J_IMAGE=neo4j:5.15-community
KOS_NEO4J_VERSION=5.15-community

# Elasticsearch Search Engine
KOS_ELASTICSEARCH_IMAGE=docker.elastic.co/elasticsearch/elasticsearch:8.11.0
KOS_ELASTICSEARCH_VERSION=8.11.0

# Weaviate Vector Database
KOS_WEAVIATE_IMAGE=semitechnologies/weaviate:1.22.4
KOS_WEAVIATE_VERSION=1.22.4

# MinIO Object Storage
KOS_MINIO_IMAGE=minio/minio:latest
KOS_MINIO_VERSION=latest

# Prometheus Monitoring
KOS_PROMETHEUS_IMAGE=prom/prometheus:latest
KOS_PROMETHEUS_VERSION=latest

# Grafana Dashboard
KOS_GRAFANA_IMAGE=grafana/grafana:latest
KOS_GRAFANA_VERSION=latest

# =============================================================================
# SERVICE FEATURE FLAGS
# =============================================================================
# Core Services (Required)
KOS_ENABLE_POSTGRES=true
KOS_ENABLE_REDIS=true
KOS_ENABLE_NEO4J=true

# Optional Services (Enable as needed)
KOS_ENABLE_ELASTICSEARCH=false
KOS_ENABLE_WEAVIATE=false
KOS_ENABLE_MINIO=false
KOS_ENABLE_PROMETHEUS=false
KOS_ENABLE_GRAFANA=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL
KOS_POSTGRES_HOST=kos-postgres
KOS_POSTGRES_PORT=5432
KOS_POSTGRES_CONTAINER_PORT=5432
KOS_POSTGRES_DB=kos_main
KOS_POSTGRES_USER=kos_user
KOS_POSTGRES_PASSWORD=kos_password_secure
KOS_POSTGRES_URL=postgresql://${KOS_POSTGRES_USER}:${KOS_POSTGRES_PASSWORD}@${KOS_POSTGRES_HOST}:${KOS_POSTGRES_PORT}/${KOS_POSTGRES_DB}

# Redis
KOS_REDIS_HOST=kos-redis
KOS_REDIS_PORT=6379
KOS_REDIS_CONTAINER_PORT=6379
KOS_REDIS_PASSWORD=redis_password_secure
KOS_REDIS_DB=0
KOS_REDIS_URL=redis://:${KOS_REDIS_PASSWORD}@${KOS_REDIS_HOST}:${KOS_REDIS_PORT}/${KOS_REDIS_DB}

# Neo4j
KOS_NEO4J_HOST=kos-neo4j
KOS_NEO4J_HTTP_PORT=7474
KOS_NEO4J_HTTP_CONTAINER_PORT=7474
KOS_NEO4J_PORT=7687
KOS_NEO4J_CONTAINER_PORT=7687
KOS_NEO4J_USER=neo4j
KOS_NEO4J_PASSWORD=neo4j_password_secure
KOS_NEO4J_URL=bolt://${KOS_NEO4J_USER}:${KOS_NEO4J_PASSWORD}@${KOS_NEO4J_HOST}:${KOS_NEO4J_PORT}

# =============================================================================
# SEARCH & VECTOR SERVICES
# =============================================================================
# Elasticsearch
KOS_ELASTICSEARCH_HOST=kos-elasticsearch
KOS_ELASTICSEARCH_PORT=9200
KOS_ELASTICSEARCH_CONTAINER_PORT=9200
KOS_ELASTICSEARCH_URL=http://${KOS_ELASTICSEARCH_HOST}:${KOS_ELASTICSEARCH_PORT}

# Weaviate
KOS_WEAVIATE_HOST=kos-weaviate
KOS_WEAVIATE_PORT=8080
KOS_WEAVIATE_CONTAINER_PORT=8080
KOS_WEAVIATE_URL=http://${KOS_WEAVIATE_HOST}:${KOS_WEAVIATE_PORT}

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# MinIO Object Storage
KOS_MINIO_HOST=kos-minio
KOS_MINIO_PORT=9000
KOS_MINIO_CONTAINER_PORT=9000
KOS_MINIO_CONSOLE_PORT=9001
KOS_MINIO_CONSOLE_CONTAINER_PORT=9001
KOS_MINIO_ROOT_USER=minioadmin
KOS_MINIO_ROOT_PASSWORD=minio_password_secure
KOS_MINIO_URL=http://${KOS_MINIO_HOST}:${KOS_MINIO_PORT}

# File Storage
KOS_STORAGE_TYPE=local
KOS_STORAGE_PATH=./data/storage
KOS_MAX_FILE_SIZE=100MB
KOS_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md,json,xml,csv

# =============================================================================
# MONITORING SERVICES
# =============================================================================
# Prometheus
KOS_PROMETHEUS_PORT=9090
KOS_PROMETHEUS_CONTAINER_PORT=9090

# Grafana
KOS_GRAFANA_PORT=3000
KOS_GRAFANA_CONTAINER_PORT=3000
KOS_GRAFANA_ADMIN_PASSWORD=grafana_password_secure

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
KOS_JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
KOS_JWT_ALGORITHM=HS256
KOS_JWT_EXPIRATION=3600
KOS_JWT_REFRESH_EXPIRATION=86400
KOS_BCRYPT_ROUNDS=12

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# OpenAI
KOS_OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
KOS_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google
KOS_GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
KOS_WS_PORT=8081
KOS_WS_PATH=/ws
KOS_WS_HEARTBEAT_INTERVAL=30

# =============================================================================
# PLUGIN SYSTEM
# =============================================================================
KOS_PLUGIN_DIRECTORY=./plugins
KOS_PLUGIN_REGISTRY_URL=https://registry.kos.dev
KOS_PLUGIN_SANDBOX=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
KOS_BACKUP_ENABLED=true
KOS_BACKUP_SCHEDULE=0 2 * * *
KOS_BACKUP_RETENTION_DAYS=30
KOS_BACKUP_PATH=./backups

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
KOS_SMTP_HOST=smtp.gmail.com
KOS_SMTP_PORT=587
KOS_SMTP_USER=your_email@gmail.com
KOS_SMTP_PASSWORD=your_app_password_here
KOS_EMAIL_FROM=noreply@kos.dev

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Set to true for development, false for production
KOS_MOCK_EXTERNAL_SERVICES=false
KOS_ENABLE_DEBUG_LOGGING=true
KOS_ENABLE_METRICS=true