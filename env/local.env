# =============================================================================
# kOS Local Services Configuration
# =============================================================================
# Copy this file to local.env and configure local services
# All local services default to true since they're installed
# DO NOT commit local.env to git (it's in .gitignore)

# =============================================================================
# CORE SERVICES (Always enabled)
# =============================================================================
KOS_ENABLE_POSTGRES=true
KOS_ENABLE_REDIS=true
KOS_ENABLE_NEO4J=true
KOS_ENABLE_NGINX=true
KOS_ENABLE_PROMPT_MANAGER=true
KOS_ENABLE_ARTIFACT_MANAGER=true

# =============================================================================
# DEVELOPMENT SERVICES (Default: true)
# =============================================================================
KOS_ENABLE_GITEA=true
KOS_ENABLE_OPENWEBUI=true
KOS_ENABLE_OLLAMA=true
KOS_ENABLE_SUPABASE=true
KOS_ENABLE_BROWSERUSE=true
KOS_ENABLE_CONTEXT7=true
KOS_ENABLE_CODIUM=true

# =============================================================================
# OPTIONAL LOCAL SERVICES (Default: true)
# =============================================================================
KOS_ENABLE_ELASTICSEARCH=true
KOS_ENABLE_WEAVIATE=true
KOS_ENABLE_MINIO=true
KOS_ENABLE_PROMETHEUS=true
KOS_ENABLE_GRAFANA=true

# =============================================================================
# SECURITY SERVICES (Default: true)
# =============================================================================
KOS_ENABLE_VAULT=true

# =============================================================================
# LOCAL SERVICE PORTS (Override if needed)
# =============================================================================
# Core Services
KOS_API_PORT=8000
KOS_FRONTEND_PORT=3000
KOS_POSTGRES_PORT=5432
KOS_REDIS_PORT=6379
KOS_NEO4J_HTTP_PORT=7474
