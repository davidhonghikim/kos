# =============================================================================
# kOS System Settings and Feature Flags
# =============================================================================
# Copy this file to settings.env and configure system settings
# These are boolean flags that control system behavior
# DO NOT commit settings.env to git (it's in .gitignore)

# =============================================================================
# SYSTEM MODES
# =============================================================================
# Development mode (enables debug features, hot reload, etc.)
KOS_DEV_MODE=true

# Production mode (disables debug features, enables optimizations)
KOS_PROD_MODE=false

# Test mode (enables test-specific features)
KOS_TEST_MODE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
KOS_ENABLE_LOGGING=true
KOS_ENABLE_METRICS=true
KOS_ENABLE_HEALTH_CHECKS=true
KOS_ENABLE_RATE_LIMITING=true
KOS_ENABLE_CACHING=true
KOS_ENABLE_COMPRESSION=true
KOS_ENABLE_CORS=true
KOS_ENABLE_HTTPS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Security-related feature flags
KOS_ENABLE_AUTHENTICATION=true
KOS_ENABLE_AUTHORIZATION=true
KOS_ENABLE_2FA=false
KOS_ENABLE_SSO=false
KOS_ENABLE_API_KEY_AUTH=true
KOS_ENABLE_JWT_AUTH=true
KOS_ENABLE_SESSION_AUTH=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# Database-related feature flags
KOS_ENABLE_DB_MIGRATIONS=true
KOS_ENABLE_DB_BACKUP=true
KOS_ENABLE_DB_MONITORING=true
KOS_ENABLE_CONNECTION_POOLING=true
KOS_ENABLE_QUERY_CACHING=true

# =============================================================================
# CACHING SETTINGS
# =============================================================================
# Caching-related feature flags
KOS_ENABLE_REDIS_CACHE=true
KOS_ENABLE_MEMORY_CACHE=true
KOS_ENABLE_FILE_CACHE=true
KOS_ENABLE_CDN_CACHE=false

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
# Monitoring-related feature flags
KOS_ENABLE_APM=true
KOS_ENABLE_ERROR_TRACKING=true
KOS_ENABLE_PERFORMANCE_MONITORING=true
KOS_ENABLE_LOGS_AGGREGATION=true
KOS_ENABLE_METRICS_COLLECTION=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Integration-related feature flags
KOS_ENABLE_WEBHOOKS=true
KOS_ENABLE_API_GATEWAY=true
KOS_ENABLE_MESSAGE_QUEUE=true
KOS_ENABLE_EVENT_STREAMING=true
KOS_ENABLE_BATCH_PROCESSING=true

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
# AI/ML-related feature flags
KOS_ENABLE_EMBEDDINGS=true
KOS_ENABLE_VECTOR_SEARCH=true
KOS_ENABLE_RAG=true
KOS_ENABLE_FINE_TUNING=true
KOS_ENABLE_MODEL_SERVING=true
KOS_ENABLE_PROMPT_ENGINEERING=true

# =============================================================================
# STORAGE SETTINGS
# =============================================================================
# Storage-related feature flags
KOS_ENABLE_FILE_UPLOAD=true
KOS_ENABLE_IMAGE_PROCESSING=true
KOS_ENABLE_VIDEO_PROCESSING=true
KOS_ENABLE_DOCUMENT_PROCESSING=true
KOS_ENABLE_BACKUP_STORAGE=true

# =============================================================================
# COMMUNICATION SETTINGS
# =============================================================================
# Communication-related feature flags
KOS_ENABLE_EMAIL=true
KOS_ENABLE_SMS=false
KOS_ENABLE_PUSH_NOTIFICATIONS=false
KOS_ENABLE_CHAT=true
KOS_ENABLE_VIDEO_CALLS=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Development tool feature flags
KOS_ENABLE_SWAGGER=true
KOS_ENABLE_GRAPHQL_PLAYGROUND=true
KOS_ENABLE_DEBUG_TOOLBAR=true
KOS_ENABLE_PROFILING=false
KOS_ENABLE_CODE_COVERAGE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Performance-related feature flags
KOS_ENABLE_ASYNC_PROCESSING=true
KOS_ENABLE_BACKGROUND_JOBS=true
KOS_ENABLE_TASK_QUEUE=true
KOS_ENABLE_LOAD_BALANCING=false
KOS_ENABLE_AUTO_SCALING=false

# =============================================================================
# COMPLIANCE SETTINGS
# =============================================================================
# Compliance-related feature flags
KOS_ENABLE_GDPR_COMPLIANCE=true
KOS_ENABLE_DATA_ENCRYPTION=true
KOS_ENABLE_AUDIT_LOGGING=true
KOS_ENABLE_DATA_RETENTION=true
KOS_ENABLE_PRIVACY_CONTROLS=true 